<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.springboot.live_comm.mappers.mybatiss1.UserMapper">
    <insert id="addUser" parameterType="com.springboot.live_comm.entity.security.User">
        insert into user (id, username, password, enabled, locked)
        values (unix_timestamp(current_timestamp(4)), #{username}, #{password}, 1, 0)
    </insert>


    <select id="loadUserByUsername" resultType="com.springboot.live_comm.entity.security.User">
        select *
        from user
        where username = #{username}
    </select>
    <select id="getUserByUsername" resultType="com.springboot.live_comm.entity.security.User">
        select *
        from user
        where username = #{username}
    </select>
    <select id="getUserRolesByUserId" resultType="com.springboot.live_comm.entity.security.Role">
        select *
        from role r,
             user_role ur
        where r.id = ur.rid
          and ur.uid = #{id}
    </select>
</mapper>

